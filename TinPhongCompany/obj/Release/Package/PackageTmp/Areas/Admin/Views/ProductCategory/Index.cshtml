@model PagedList.IPagedList<Model.EF.ProductCategory>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Danh sách loại cửa";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section jsFooter{


    <script src="/Assets/Admin/ajax/ProductController.js"></script>
    <script>
        $('#notifymessage').removeClass('hide');
        $('#notifymessage').delay(2000).slideUp(500);

    </script>
}
<div class="right_col" role="main">
    <div class="">

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        @if (TempData["AlertMessage"] != null)
                        {
                            <div id="notifymessage" class="alert @TempData["AlertType"]" style="font-size:23px;">
                                @TempData["AlertMessage"]
                            </div>
                        }

                        <br />
                        <h2>Danh sách loại cửa</h2>

                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Des</th>
                                    <th>Title</th>
                                    <th>Dis</th>
                                    <th>SeoTitle</th>                              
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>MetaKey</th>
                                    <th>MetaDes</th>
                                     <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@Html.Raw(@item.Description)</td>
                                        <td>@item.MetaTitle</td>
                                        <td>@item.DisplayOrder</td>
                                        <td>

                                            @item.SeoTitle

                                        </td>

                                        <td>@item.CreatedDate</td>
                                        <td>@item.Status</td>
                                      
                                        <td>@item.MetaKeywords</td>
                                        <td>@item.MetaDescriptions</td>
                                        <td>

                                            <a href="/admin/productcategory/editproductcategory/@item.ID" class="btn btn-warning">Sửa</a>
                                            @*Viết Ajax file riêng*@
                                            <a href="#" class="btn btn-danger btn-delete-productcategory" data-id="@item.ID">Xóa</a>


                                            @*Xóa
                                                     @Ajax.ActionLink("Xóa", "DeleteProduct", new { @id = item.ID }, new AjaxOptions
                                                {
                                                    Confirm = "Bạn có chắc chắn muốn xóa không?",
                                                    OnComplete = "$('#row_" + @item.ID + "').remove()",
                                                    HttpMethod = "Delete"
                                                }, new { @class = "btn btn-danger" });*@

                                        </td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>