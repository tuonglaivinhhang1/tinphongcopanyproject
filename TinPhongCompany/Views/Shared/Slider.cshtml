
@model List<Model.EF.Slide>
<div>
    <div class="slider-wrapper theme-default">
        <div id='slider820908' class="nivoSlider">
            @foreach (var item in Model)
            {
                <a href='@item.Link' target="_blank">
                    <img alt="@item.Description"
                         title="@item.Description"
                         src="@item.Image" />
                </a>
            }

        </div>
    </div>
    <script type="text/javascript" src="/Assets/Scripts/jquery.nivo.slider.pack.js"></script>
    <script type="text/javascript">
        $(window).load(function () {
            $('#slider820908').nivoSlider({
                effect: "random", animSpeed: 1000, pauseTime: 3500, pauseOnHover: true, randomStart: true, directionNav: true, controlNav: true
            });
        });
    </script>
</div>
